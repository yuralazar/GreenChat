@using GreenChat.Client_WEB.Client
@using Microsoft.AspNetCore.Http
@inject WebApiClient Client

@if (Client.UserIsSignedIn(Context).Result)
{    
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Hello @Client.GetCurrentUser(Context).Result.Email</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link" id="_logoutButton_">Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
    </ul>
}
