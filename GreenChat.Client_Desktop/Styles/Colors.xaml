<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:GreenChat.Client_Desktop">
    
    <Color x:Key="BackgroundLight">#EFEFEF</Color>
    <SolidColorBrush x:Key="BackgroundLightBrush" Color="{StaticResource BackgroundLight}"/>
    
    <Color x:Key="ForegroundLight">#ffffff</Color>
    <SolidColorBrush x:Key="ForegroundLightBrush" Color="{StaticResource ForegroundLight}"/>

    <Color x:Key="ForegroundMain">#686868</Color>
    <SolidColorBrush x:Key="ForegroundMainBrush" Color="{StaticResource ForegroundMain}"/>

    <Color x:Key="ForegroundDark">#2E2E2E</Color>
    <SolidColorBrush x:Key="ForegroundDarkBrush" Color="{StaticResource ForegroundDark}"/>

    <Color x:Key="BackgroundGreen">#C5E1A5</Color>
    <SolidColorBrush x:Key="BackgroundGreenBrush" Color="{StaticResource BackgroundGreen}"/>

    <Color x:Key="Orange">#33691E</Color>
    <SolidColorBrush x:Key="OrangeBrush" Color="{StaticResource Orange}"/>


    <!--Chat Bubbble Colors-->
    <Color x:Key="MyMessageBubleBackground">#7CB342</Color>
    <SolidColorBrush x:Key="MyMessageBubleBackgroundBrush" Color="{StaticResource MyMessageBubleBackground}"/>

    <Color x:Key="MessageBubleBackground">#4CAF50</Color>
    <SolidColorBrush x:Key="MessageBubleBackgroundBrush" Color="{StaticResource MessageBubleBackground}"/>


</ResourceDictionary>